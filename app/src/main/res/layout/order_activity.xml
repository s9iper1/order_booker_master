<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/background_design"
        android:id="@+id/imageViewBackground"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="What Do You Want?"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_below="@id/imageViewBackground"
        android:id="@+id/order_tv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:lines="2"
        android:maxLines="2"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:background="@drawable/edittext_border"
        android:ems="13"
        android:id="@+id/order_et"
        android:layout_below="@+id/order_tv"
        android:layout_alignLeft="@+id/order_tv"
        android:layout_alignStart="@+id/order_tv"
        />

    <TextView
        android:text="From Where?"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/from_where_tv"
        android:layout_below="@+id/order_et"
        android:layout_alignLeft="@+id/order_et"
        android:layout_alignStart="@+id/order_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textColor="#000"
        android:maxLines="3"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:background="@drawable/edittext_border"
        android:ems="13"
        android:id="@+id/from_where_et"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/from_where_tv"
        android:layout_alignLeft="@+id/from_where_tv"
        android:layout_alignStart="@+id/from_where_tv" />

    <TextView
        android:text="Select Time &amp; Date / Now"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/time_date_tv"
        android:layout_below="@+id/from_where_et"
        android:layout_alignLeft="@+id/from_where_et"
        android:layout_alignStart="@+id/from_where_et" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:background="@drawable/button_theme"
        android:id="@+id/time_date_button"
        android:layout_below="@+id/time_date_tv"
        android:layout_alignLeft="@+id/time_date_tv"
        android:layout_alignStart="@+id/time_date_tv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:text="Now"
        android:padding="10dp"
        android:textAlignment="center"
        android:background="@drawable/button_theme"
        android:id="@+id/nowButton"
        android:layout_alignTop="@+id/time_date_button"
        android:layout_toRightOf="@+id/time_date_tv"
        android:layout_toEndOf="@+id/time_date_tv" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/bike"
        android:layout_below="@+id/time_date_button"
        android:layout_alignLeft="@+id/imageViewBackground"
        android:id="@+id/imageViewBike"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
