<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@android:color/white"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/background_design"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="Name"
        android:textColor="#ED1C24"
        android:textSize="25sp"
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/name_et"
        android:layout_alignStart="@+id/name_et"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:id="@+id/name_et"
        android:padding="4dp"
        android:layout_below="@+id/name_text_view"
        android:layout_marginTop="6dp"
        android:layout_alignLeft="@+id/address_et"
        android:layout_alignStart="@+id/address_et" />

    <TextView
        android:text="Address(in details)"
        android:textColor="#ED1C24"
        android:textSize="25sp"
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name_et"
        android:layout_alignLeft="@+id/address_et"
        android:layout_alignStart="@+id/address_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:padding="4dp"
        android:id="@+id/address_et"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/address_text_view" />


    <TextView
        android:text="Phone Number"
        android:textColor="#ED1C24"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:id="@+id/mobile_text_view"
        android:layout_below="@+id/address_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:padding="4dp"
        android:id="@+id/mobile_editText"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/mobile_text_view" />

    <Button
        android:textColor="@android:color/white"
        android:background="@color/red"
        android:textStyle="bold"
        android:id="@+id/continue_button"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/mobile_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/bike"
        android:layout_toLeftOf="@+id/continue_button"
        android:id="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
